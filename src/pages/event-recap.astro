const pageTitle: string = `Event Recaps | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://commercequest.space/",
    "url": "https://commercequest.space/",
    "name": "Hack, Build, Win. | CommerceQuest",
    "description": "Commerce Resources for the driven Spryker, Propel & Oryx developer.",
    "isPartOf": {
        "@type": "WebSite",
        "url": "https://commercequest.space/",
        "name": "CommerceQuest",
        "description": "Commerce Resources for the driven Spryker, Propel & Oryx developer."
    },
    "inLanguage": "en-US"
  }}
>
  <!--MainSection is the introductory section of the page, it also contains a CTA button-->
  <MainSection
    title="CommerceQuest Event Recaps"
    subTitle="We and our community partners regularly organize events, hackathons and meetups to bring together software developers, engineers and architects. These events are a great opportunity to learn, network, and collaborate with like-minded individuals. Check out our event recaps below to learn more about our past events or click the button below toe view upcoming events."
    btnExists={true}
    btnTitle="Upcoming Events"
    btnURL="https://forum.commercequest.space/events/category"
  />
  <!-- RightRecap and LeftRecap contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightRecap can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  {
    events.map(event => {
      return event.isRightRecap ? (
        <RightRecap
          title={event.title}
          description={event.description}
          single={event.single}
          imgOne={event.imgOne}
          imgOneAlt={event.imgOneAlt}
          imgTwo={event.imgTwo}
          imgTwoAlt={event.imgTwoAlt}
          btnExists={event.btnExists}
          btnTitle={event.btnTitle}
          btnURL={event.btnURL}
          location={event.location}
          organizer={event.organizer}
          logo={event.logo}
          logoAlt={event.logoAlt ?? ""}
        />
      ) : (
        <LeftRecap
          title={event.title}
          description={event.description}
          img={event.img}
          imgAlt={event.imgAlt}
          btnExists={event.btnExists}
          btnTitle={event.btnTitle}
          btnURL={event.btnURL}
          organizer={event.organizer}
          location={event.location}
          logo={event.logo}
          logoAlt={event.logoAlt ?? ""}
        />
      );
    })
  }
